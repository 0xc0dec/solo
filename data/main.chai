var device = engine.getDevice();
var scene = engine.getScene();

print("Current window title: " + device.getWindowTitle());
device.setWindowTitle("Set from scripts!");

class Script
{
	var field;

	def Script()
	{
		this.field = 1;
	}

	def update(dt)
	{
		this.field += 1;
		print(this.field);
	}
};

var node = scene.createNode();
print(node.getId());
var script = node.addComponent("Script");
script.field = 2;

print("Done");